  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'timetracker-cli'",
      "cargo": {
        "args": ["build", "--bin=timetracker-cli", "--package=timetracker-cli"],
        "filter": {
          "name": "timetracker-cli",
          "kind": "bin"
        }
      },
      "args": [],
      "env": { "RUST_LOG": "timetracker-cli=debug" },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'timetracker-cli'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=timetracker-cli",
          "--package=timetracker-cli"
        ],
        "filter": {
          "name": "timetracker-cli",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
